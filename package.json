{
  "name": "real-debrid-magnet-handler",
  "version": "1.0.0",
  "description": "Firefox extension to convert magnet links to HTTP downloads via Real-Debrid",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "web-ext run --source-dir ./dist",
    "lint": "tsc --noEmit",
    "lint:eslint": "eslint src",
    "format": "prettier --write src *.json *.ts *.js *.cjs",
    "format:check": "prettier --check src *.json *.ts *.js *.cjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "package": "web-ext build --source-dir ./dist --artifacts-dir ./web-ext-artifacts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PhilBug/Real-Debrid-Magnet-Handler.git"
  },
  "keywords": [
    "firefox",
    "extension",
    "real-debrid",
    "magnet",
    "torrent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.7.9",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "^5.1.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@types/webextension-polyfill": "^0.12.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^4.0.18",
    "web-ext": "^8.9.0"
  }
}
