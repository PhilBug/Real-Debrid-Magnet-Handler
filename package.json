{
  "name": "real-debrid-magnet-handler",
  "version": "1.0.0",
  "description": "Firefox extension to convert magnet links to HTTP downloads via Real-Debrid",
  "type": "module",
  "scripts": {
    "dev": "NO_COLOR=1 FORCE_COLOR=0 vite",
    "build": "NO_COLOR=1 FORCE_COLOR=0 tsc --pretty false && NO_COLOR=1 FORCE_COLOR=0 vite build && node scripts/fix-manifest.js",
    "preview": "NO_COLOR=1 FORCE_COLOR=0 web-ext run --source-dir ./dist",
    "lint": "NO_COLOR=1 FORCE_COLOR=0 tsc --noEmit --pretty false",
    "lint:eslint": "NO_COLOR=1 FORCE_COLOR=0 eslint --no-color src",
    "lint:firefox": "NO_COLOR=1 FORCE_COLOR=0 web-ext lint --source-dir ./dist",
    "format": "NO_COLOR=1 FORCE_COLOR=0 prettier --write src scripts *.json *.ts *.js *.cjs",
    "format:check": "NO_COLOR=1 FORCE_COLOR=0 prettier --check src *.json *.ts *.js *.cjs",
    "test": "NO_COLOR=1 FORCE_COLOR=0 vitest",
    "ai-agent-test": "NO_COLOR=1 FORCE_COLOR=0 vitest --run --reporter verbose",
    "test:ui": "NO_COLOR=1 FORCE_COLOR=0 vitest --ui",
    "test:coverage": "NO_COLOR=1 FORCE_COLOR=0 vitest --coverage",
    "package": "NO_COLOR=1 FORCE_COLOR=0 web-ext build --source-dir ./dist --artifacts-dir ./web-ext-artifacts",
    "semantic-release": "NO_COLOR=1 FORCE_COLOR=0 semantic-release",
    "precheck": "npm run lint ; npm run format --write ; npm run test -- --run ; npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PhilBug/Real-Debrid-Magnet-Handler.git"
  },
  "keywords": [
    "firefox",
    "extension",
    "real-debrid",
    "magnet",
    "torrent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "^2.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "web-ext": "^9.2.0"
  }
}
